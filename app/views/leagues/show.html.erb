<div class="row">
  <div class="col-md-9">
    <h3>Your Team</h3>
  </div>
</div>
<br>

<div class="row">
  <% if !@league.upcoming? %>
  <div class="col-md-1">
  </div>

  <% end %>
  <% @team.player_list.each_index do |index| %>

  <div class="col-md-2">
    <div class="media">
      <div class="media-body">
        <img class="media-object img-responsive" src="<%= @team_pics[index] %> " alt="...">
        <h4 class="media-heading">
          <span class="muted"><%= @team_roles[index] %></span>
          <span><%= @team_names[index] %></span></h4>
          <p>
            <b>Score: </b><span><%= @team_player_scores["#{@team.player_list[index]}"]['score'].round(1) %></span>
          </p>
        </div>
      </div>
    </div>
    <% end %>
    <% if @league.upcoming? %>
    <div class="col-md-2">
      <%= link_to "Edit", team_path(@team), class: "btn btn-primary" %>
    </div>

    <% else %>
    <div class="col-md-1">
    </div>
    <% end %>

  </div>
<br>


  <div class="row">
    <div class="col-md-6">
      <h3>League Info</h3>
      <p>
        <strong>Name:</strong>
        <%= @league.name %>
      </p>

      <p>
        <strong>Cost:</strong>
        <%= @league.cost %>
      </p>

      <p>
        <strong>Max participants:</strong>
        <%= @league.max_participants %>
      </p>

      <p>
        <strong>Status:</strong>
        <%= @league.status %>
      </p>

      <p>
        <strong>Start time:</strong>
        <%= @league.start_time.strftime('%a %b %e %I:%M %p %Z') %>
      </p>
      <% if @league.upcoming? %>
      <%= link_to "Leave", team_path(@team), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
      <% end %>

    </div>
    <div class="col-md-6">
      <h3>League Rankings</h3>
      <div class="rounded-corners">
        <table class="table table-hover">
          <tr>
            <th>
              Ranking
            </th>
            <th>
              Username
            </th>
            <th>
              Score
            </th>
          </tr>
        </thead>
        <tbody>
          <% count = 0 %>
          <% @rankings.each do |user| %>
          <% count += 1 %>
          <tr>
            <td>
              <%= count %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= user.league_score(@league) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>
